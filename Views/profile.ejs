            </ul>
            
        </nav>
       
    </div>
    <h3 class="text-3xl"><span class="font-light">Hello</span> <%= user.name %> ðŸ™Œ</h3>
    <h5 class="mb-5">you can create a new post</h5>
    <form action="/post" method="post">
        <textarea placeholder="What is on your mind ?" class="block p-3 outline-none w-1/3 resize-none bg-transparent border-2 border-zinc-800 rounded-md" name="content" ></textarea>
    <input class="px-3 w-40 py-2 text-sm bg-blue-500 block rounded-md mt-2" type="submit" value="Create new post">
    </form>
    <div class="posts mt-20">
        <h3 class="text-zinc-400">Your Posts</h3>
        <div class="postcontainer mt-5">
            <% user.posts.reverse().forEach(function(post){ %>

             <div class="post w-1/3 p-4 rounded-md mb-3 border-2 bg-zinc-800 border-zinc-700">
                 <h4 class="text-blue-500 mb-2"><%= user.username %></h4>
                 <p class="text-sm tracking-tight"><%= post.content %></p>
                  <div class="btns flex gap-4 mt-5">
                    <a class="tex-blue-500" href="">Like</a>
                    <a class="text-blue-700" href="">Edit</a>
                </div>
            </div> 
        <%  } ) %>
